<div class="show">
  <h2><%= @event.name %></h2>
  <h3><%= @event.url %></h3>
  <h3><%= @event.description %></h3>
  <h3><%= @event.address %></h3>
  <h3><%= current_user.name %></h3>
  <h3><%= @event.date ? @event.date.strftime('%A %B %d') : nil  %></h3>
  <h3><%= @event.start_time ? @event.start_time.strftime("%I:%M %p") : nil %></h3>
</div>