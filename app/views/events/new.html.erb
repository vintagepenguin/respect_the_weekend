
<% if current_user %>
<div class="form">
<%= form_for @event do |f| %>
  <%= f.text_field :name, :placeholder => "Title"  %> <br>
  <%= f.text_area  :description, :placeholder => "Describe the Event"%> <br>
  <%= f.text_field :url, :placeholder => "Url of Event" %> <br>
  <%= f.text_field :address, :placeholder => "Address" %> <br>
  <%= f.time_field :start_time %> <br>
  <%= f.date_field :date  %> <br>
  <%= f.submit %> <br>
<%  end  %>
</div>
<% else %>
  
<% end %>